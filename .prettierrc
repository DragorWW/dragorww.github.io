{
    "semi": true,
    "tabWidth": 4,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.ejs",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": "*.svg",
            "options": {
                "parser": "html"
            }
        }
    ]
} 