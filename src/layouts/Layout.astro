---
import SEO from "../components/SEO.astro";
import { useTranslations } from "../utils/i18n";

interface Props {
  title: string;
  description: string;
  keywords: string;
}

const { title, description, keywords } = Astro.props;
const { lang } = useTranslations(Astro);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <SEO title={title} description={description} keywords={keywords} />

    <link
      rel="icon"
      type="image/svg+xml"
      data-theme="light"
      href="/assets/favicon-light.svg"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      data-theme="dark"
      href="/assets/favicon-dark.svg"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/firacode@6.2.0/distr/fira_code.css"
    />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
<style is:global is:inline>
  :root {
    /* Light theme (default) */
    --bg-color-light: #e8e4d9;
    --text-color-light: #2b2926;
    --primary-color-light: #d4a76a;
    --secondary-color-light: #b47267;
    --card-bg-light: #efe9dd;
    --border-color-light: #d5cec2;
    --text-primary-light: #2b2926;
    --text-secondary-light: #6b665e;
    --text-tertiary-light: #a39e93;
    --accent-color-light: #d4a76a;

    /* RGB versions - Light */
    --bg-color-rgb-light: 232, 228, 217;
    --text-color-rgb-light: 43, 41, 38;
    --primary-color-rgb-light: 212, 167, 106;
    --secondary-color-rgb-light: 180, 114, 103;
    --card-bg-rgb-light: 239, 233, 221;
    --border-color-rgb-light: 213, 206, 194;
    --text-primary-rgb-light: 43, 41, 38;
    --text-secondary-rgb-light: 107, 102, 94;
    --text-tertiary-rgb-light: 163, 158, 147;
    --accent-color-rgb-light: 212, 167, 106;

    /* Dark theme */
    --bg-color-dark: #111111;
    --text-color-dark: #ffffff;
    --primary-color-dark: #e2c08d;
    --secondary-color-dark: #c17b6f;
    --card-bg-dark: #1a1a1a;
    --border-color-dark: #2a2a2a;
    --text-primary-dark: #e2e2e2;
    --text-secondary-dark: #9ca38f;
    --text-tertiary-dark: #666666;
    --accent-color-dark: #e2c08d;

    /* RGB versions - Dark */
    --bg-color-rgb-dark: 17, 17, 17;
    --text-color-rgb-dark: 255, 255, 255;
    --primary-color-rgb-dark: 226, 192, 141;
    --secondary-color-rgb-dark: 193, 123, 111;
    --card-bg-rgb-dark: 26, 26, 26;
    --border-color-rgb-dark: 42, 42, 42;
    --text-primary-rgb-dark: 226, 226, 226;
    --text-secondary-rgb-dark: 156, 163, 143;
    --text-tertiary-rgb-dark: 102, 102, 102;
    --accent-color-rgb-dark: 226, 192, 141;

    --section-title-color: var(--text-primary);

    /* Breakpoints */
    --mobile: 480px;
    --tablet: 768px;
    --laptop: 1024px;
    --desktop: 1200px;

    /* Container widths */
    --container-padding: 1rem;
    --container-max-width: 1200px;
  }

  /* Default theme (light) */
  :root {
    --bg-color: var(--bg-color-light);
    --text-color: var(--text-color-light);
    --primary-color: var(--primary-color-light);
    --secondary-color: var(--secondary-color-light);
    --card-bg: var(--card-bg-light);
    --border-color: var(--border-color-light);
    --text-primary: var(--text-primary-light);
    --text-secondary: var(--text-secondary-light);
    --text-tertiary: var(--text-tertiary-light);
    --accent-color: var(--accent-color-light);

    /* RGB versions */
    --bg-color-rgb: var(--bg-color-rgb-light);
    --text-color-rgb: var(--text-color-rgb-light);
    --primary-color-rgb: var(--primary-color-rgb-light);
    --secondary-color-rgb: var(--secondary-color-rgb-light);
    --card-bg-rgb: var(--card-bg-rgb-light);
    --border-color-rgb: var(--border-color-rgb-light);
    --text-primary-rgb: var(--text-primary-rgb-light);
    --text-secondary-rgb: var(--text-secondary-rgb-light);
    --text-tertiary-rgb: var(--text-tertiary-rgb-light);
    --accent-color-rgb: var(--accent-color-rgb-light);
  }

  /* Dark theme */
  :root[data-theme="dark"] {
    --bg-color: var(--bg-color-dark);
    --text-color: var(--text-color-dark);
    --primary-color: var(--primary-color-dark);
    --secondary-color: var(--secondary-color-dark);
    --card-bg: var(--card-bg-dark);
    --border-color: var(--border-color-dark);
    --text-primary: var(--text-primary-dark);
    --text-secondary: var(--text-secondary-dark);
    --text-tertiary: var(--text-tertiary-dark);
    --accent-color: var(--accent-color-dark);

    /* RGB versions */
    --bg-color-rgb: var(--bg-color-rgb-dark);
    --text-color-rgb: var(--text-color-rgb-dark);
    --primary-color-rgb: var(--primary-color-rgb-dark);
    --secondary-color-rgb: var(--secondary-color-rgb-dark);
    --card-bg-rgb: var(--card-bg-rgb-dark);
    --border-color-rgb: var(--border-color-rgb-dark);
    --text-primary-rgb: var(--text-primary-rgb-dark);
    --text-secondary-rgb: var(--text-secondary-rgb-dark);
    --text-tertiary-rgb: var(--text-tertiary-rgb-dark);
    --accent-color-rgb: var(--accent-color-rgb-dark);

    --section-title-color: rgba(var(--accent-color-rgb), 0.9);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Fira Code", Consolas, Monaco, "Andale Mono", "Ubuntu Mono",
      monospace;
    background-color: var(--bg-color);
    color: var(--text-primary);
    line-height: 1.5;
    position: relative;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
