---
import { useTranslations } from "../utils/i18n";
import { LANGUAGES } from "../constants/languages";

export function getStaticPaths() {
  return [
    { params: { lang: LANGUAGES.RU } },
    { params: { lang: LANGUAGES.EN } },
  ];
}

const { lang } = Astro.params;
const t = (key: string) => useTranslations(Astro).t(key, lang || LANGUAGES.EN);

const experience = [
  {
    year: 2024,
    isCurrent: true,
    role: t("experience.role.cto"),
    company: t("experience.company.ultimate"),
    location: t("experience.location.moscow"),
    description: t("experience.ultimate.description"),
    achievements: [
      t("experience.ultimate.achievement1"),
      t("experience.ultimate.achievement2"),
      t("experience.ultimate.achievement3"),
      t("experience.ultimate.achievement4"),
    ],
    skills: [
      { name: "Kubernetes" },
      { name: "React" },
      { name: "TypeScript" },
      { name: "Python" },
      { name: "Django" },
    ],
  },
  {
    year: 2020,
    role: t("experience.role.cto"),
    company: t("experience.company.xyz"),
    location: t("experience.location.moscow"),
    description: t("experience.xyz.description"),
    achievements: [
      t("experience.xyz.achievement1"),
      t("experience.xyz.achievement2"),
      t("experience.xyz.achievement3"),
    ],
    skills: [
      { name: "Kubernetes" },
      { name: "Terraform" },
      { name: "React" },
      { name: "TypeScript" },
      { name: "CSS Modules" },
      { name: "GraphQL" },
      { name: "REST" },
      { name: "Python" },
      { name: "Django" },
    ],
  },
  {
    year: 2019,
    role: t("experience.role.principal"),
    company: t("experience.company.sber"),
    location: t("experience.location.spb"),
    description: t("experience.sber.description"),
    achievements: [
      t("experience.sber.achievement1"),
      t("experience.sber.achievement2"),
    ],
    skills: [
      { name: "React" },
      { name: "TypeScript" },
      { name: "Java" },
      { name: "Kotlin" },
    ],
  },
  {
    year: 2016,
    role: t("experience.role.principal"),
    company: t("experience.company.mag"),
    location: t("experience.location.tomsk"),
    description: t("experience.mag.description"),
    achievements: [
      t("experience.mag.achievement1"),
      t("experience.mag.achievement2"),
      t("experience.mag.achievement3"),
    ],
    skills: [
      { name: "React" },
      { name: "JavaScript" },
      { name: "Jenkins" },
      { name: "Jest" },
    ],
  },
  {
    year: 2013,
    role: t("experience.role.head"),
    company: t("experience.company.user"),
    location: t("experience.location.tomsk"),
    description: t("experience.user.description"),
    achievements: [
      t("experience.user.achievement1"),
      t("experience.user.achievement2"),
      t("experience.user.achievement3"),
    ],
    skills: [
      { name: "JavaScript" },
      { name: "React" },
      { name: "Redux" },
      { name: "Webpack" },
    ],
  },
];

const education = [
  {
    year: 2014,
    degree: t("education.degree"),
    institution: t("education.institution"),
    location: t("education.location"),
    description: t("education.description"),
  },
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t("me.name")} - CV</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main class="cv-container">
      <div class="cv-main-content">
        <header class="cv-header">
          <div class="cv-header-content">
            <h1 class="cv-name">{t("me.name")}</h1>
            <h2 class="cv-role">{t("cv.role.title")}</h2>
          </div>
        </header>

        <section class="cv-section cv-profile-section">
          <h2 class="cv-section-title">{t("cv.sections.profile")}</h2>
          <p class="cv-profile">
            {t("cv.profile.intro")}
          </p>
          <p class="cv-profile">
            {t("cv.profile.experience")}
          </p>
        </section>

        <section class="cv-section">
          <h2 class="cv-section-title">{t("cv.sections.experience")}</h2>
          {
            experience.map((job) => (
              <div class="cv-job">
                <div class="cv-job-header">
                  <div class="cv-job-title">
                    <h3>{job.role}</h3>
                    <p class="cv-company">
                      {job.company}, {job.location}
                    </p>
                  </div>
                  <div class="cv-job-period">
                    {job.year}
                    {job.isCurrent ? ` - ${t("experience.present")}` : ""}
                  </div>
                </div>
                <p class="cv-job-description">{job.description}</p>
                <div class="cv-skills">
                  {job.skills?.map((skill) => (
                    <span class="cv-skill-tag">{skill.name}</span>
                  ))}
                </div>
                <ul class="cv-achievements">
                  {job.achievements.map((achievement) => (
                    <li>{achievement}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </section>

        <section class="cv-section">
          <h2 class="cv-section-title">{t("cv.sections.education")}</h2>
          {
            education.map((edu) => (
              <div class="cv-education">
                <div class="cv-education-header">
                  <div class="cv-education-title">
                    <h3>{edu.degree}</h3>
                    <p class="cv-institution">
                      {edu.institution}, {edu.location}
                    </p>
                  </div>
                  <div class="cv-education-year">{edu.year}</div>
                </div>
                <p class="cv-education-description">{edu.description}</p>
              </div>
            ))
          }
        </section>
      </div>

      <aside class="cv-sidebar">
        <div class="cv-sidebar-section">
          <h3 class="cv-sidebar-title">{t("cv.sections.contacts")}</h3>
          <div class="cv-contacts">
            <a href="mailto:dragorww@gmail.com">{t("cv.contacts.email")}</a>
            <a href="https://t.me/dragorww">{t("cv.contacts.telegram")}</a>
            <a href="https://dragorww.github.io">{t("cv.contacts.website")}</a>
          </div>
        </div>

        <div class="cv-sidebar-section">
          <h3 class="cv-sidebar-title">{t("cv.sections.achievements")}</h3>
          <ul class="cv-highlights">
            <li>{t("hero.stats.experience")}</li>
            <li>{t("hero.stats.delivery")}</li>
            <li>{t("hero.stats.solutions")}</li>
          </ul>
        </div>

        <div class="cv-sidebar-section">
          <h3 class="cv-sidebar-title">{t("cv.sections.key_skills")}</h3>
          <div class="cv-key-skills">
            <div class="cv-skill-list">
              <div class="cv-skill-category">
                <h4 class="cv-skill-category-title">
                  {t("cv.skills.management")}
                </h4>
                <div class="cv-skill-items">
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.management.strategic_planning")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 95%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.management.team_management")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 90%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.management.process_optimization")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 85%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.management.budgeting")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 80%"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="cv-skill-category">
                <h4 class="cv-skill-category-title">
                  {t("cv.skills.development")}
                </h4>
                <div class="cv-skill-items">
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.development.architecture")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 95%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.development.frontend")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 90%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.development.devops")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 85%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.development.integration")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 85%"></div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="cv-skill-category">
                <h4 class="cv-skill-category-title">
                  {t("cv.skills.analytics")}
                </h4>
                <div class="cv-skill-items">
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.analytics.product")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 90%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.analytics.business")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 90%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.analytics.data_driven")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 85%"></div>
                    </div>
                  </div>
                  <div class="cv-skill-item">
                    <div class="cv-skill-name">
                      {t("cv.skills.analytics.metrics")}
                    </div>
                    <div class="cv-skill-bar">
                      <div class="cv-skill-progress" style="width: 85%"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </aside>
    </main>

    <style>
      /* Base */
      :root {
        --text-primary: #2d2d2d;
        --text-secondary: #666;
        --accent-color: #e2c08d;
        --accent-color-rgb: 226, 192, 141;
        --border-color: rgba(226, 192, 141, 0.2);
        --card-bg: #fff;
        --card-bg-rgb: 255, 255, 255;
      }

      body {
        font-family: "Fira Code", monospace;
        line-height: 1.6;
        color: var(--text-primary);
        background: var(--card-bg);
        padding: 0;
        margin: 0 auto;
        width: 210mm; /* A4 width */
      }

      /* Container */
      .cv-container {
        display: grid;
        grid-template-columns: 1fr 180px;
        gap: 2rem;
        padding: 20mm 15mm;
        background: var(--card-bg);
      }

      .cv-main-content {
        border-right: 1px solid var(--border-color);
        padding-right: 1.5rem;
      }

      .cv-sidebar {
        font-size: 0.9rem;
      }

      .cv-sidebar-section {
        margin-bottom: 1.5rem;
      }

      .cv-sidebar-title {
        color: var(--accent-color);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
      }

      .cv-contacts {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
      }

      .cv-contacts a {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.75rem;
      }

      .cv-highlights {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .cv-highlights li {
        padding-left: 1rem;
        position: relative;
        margin-bottom: 0.35rem;
        font-size: 0.75rem;
        color: var(--text-secondary);
      }

      .cv-highlights li::before {
        content: "•";
        color: var(--accent-color);
        position: absolute;
        left: 0;
      }

      /* Sections */
      .cv-section {
        margin-bottom: 2rem;
        padding: 0.75rem 0;
      }

      .cv-section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--accent-color);
        position: relative;
        padding-left: 1rem;
      }

      .cv-section-title::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 1.2em;
        background: var(--accent-color);
        border-radius: 2px;
      }

      /* Profile */
      .cv-profile {
        font-size: 1rem;
        margin-bottom: 1rem;
        line-height: 1.6;
      }

      .cv-key-skills {
        margin: 2rem 0;
      }

      .cv-subsection-title {
        font-size: 1.1rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
        font-weight: 500;
      }

      .cv-skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .cv-skill-group {
        background: rgba(var(--accent-color-rgb), 0.03);
        padding: 1rem;
        border-radius: 6px;
        border: 1px solid var(--border-color);
      }

      .cv-skill-group-title {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--accent-color);
      }

      .cv-skill-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .cv-skill-item {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
      }

      .cv-skill-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
      }

      .cv-skill-name {
        font-size: 0.75rem;
        color: var(--text-secondary);
      }

      .cv-skill-level {
        color: var(--accent-color);
        font-weight: 500;
      }

      .cv-skill-bar {
        height: 2px;
        background: var(--border-color);
        border-radius: 1px;
        overflow: hidden;
      }

      .cv-skill-progress {
        height: 100%;
        background: var(--accent-color);
        border-radius: 1px;
      }

      @media print {
        .cv-skill-progress {
          print-color-adjust: exact;
          -webkit-print-color-adjust: exact;
        }
      }

      .cv-highlights {
        list-style: none;
        margin-left: 1rem;
      }

      .cv-highlights li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .cv-highlights li::before {
        content: "▹";
        position: absolute;
        left: 0;
        color: var(--accent-color);
      }

      /* Experience */
      .cv-job {
        margin-bottom: 2rem;
        padding: 0.75rem;
        position: relative;
      }

      .cv-job:not(:last-child)::after {
        content: "";
        position: absolute;
        bottom: -1rem;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          var(--border-color) 20%,
          var(--border-color) 80%,
          transparent
        );
      }

      .cv-job-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
        gap: 1rem;
      }

      .cv-job-title {
        flex: 1;
      }

      .cv-job-title h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
      }

      .cv-company {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0;
      }

      .cv-job-period {
        font-size: 0.9rem;
        color: var(--text-secondary);
        white-space: nowrap;
        text-align: right;
      }

      .cv-job-description {
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
      }

      .cv-skills {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .cv-skill-tag {
        font-size: 0.8rem;
        padding: 0.15rem 0;
        color: var(--text-secondary);
        position: relative;
        margin-right: 1rem;
      }

      .cv-skill-tag:not(:last-child)::after {
        content: "•";
        position: absolute;
        right: -0.75rem;
        color: var(--accent-color);
        font-size: 0.8rem;
      }

      .cv-achievements {
        list-style: none;
        margin-left: 1rem;
      }

      .cv-achievements li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
      }

      .cv-achievements li::before {
        content: "•";
        position: absolute;
        left: 0;
        color: var(--accent-color);
      }

      /* Education */
      .cv-education {
        margin-bottom: 1.5rem;
      }

      .cv-education-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
      }

      .cv-education-title h3 {
        font-size: 1.1rem;
        font-weight: 600;
      }

      .cv-institution {
        font-size: 0.9rem;
        color: var(--text-secondary);
      }

      .cv-education-year {
        font-size: 0.9rem;
        color: var(--text-secondary);
      }

      /* Print styles */
      @media print {
        body {
          padding: 0;
          background: var(--card-bg);
          print-color-adjust: exact;
          -webkit-print-color-adjust: exact;
        }

        .cv-container {
          margin: 0;
          padding: 20mm 15mm;
          max-width: none;
          box-shadow: none;
          border-radius: 0;
        }

        .cv-section,
        .cv-job {
          break-inside: avoid;
        }

        .cv-job:hover {
          box-shadow: none;
        }

        .cv-skill-tag:hover {
          background: rgba(var(--accent-color-rgb), 0.1);
          border-color: var(--border-color);
        }

        @page {
          margin: 0;
          size: A4;
        }

        .cv-skill-group {
          break-inside: avoid;
        }

        .cv-skills {
          margin-bottom: 0.75rem;
        }
      }

      .cv-skill-category {
        margin-bottom: 1rem;
      }

      .cv-skill-category:last-child {
        margin-bottom: 0;
      }

      .cv-skill-category-title {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--text-secondary);
        margin-bottom: 0.35rem;
      }

      .cv-name {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(
          90deg,
          var(--text-primary) 0%,
          var(--accent-color) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .cv-role {
        margin: 0;
        font-size: 1.25rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
        font-weight: 400;
        letter-spacing: 0.05em;
        opacity: 0.9;
      }
    </style>
  </body>
</html>
