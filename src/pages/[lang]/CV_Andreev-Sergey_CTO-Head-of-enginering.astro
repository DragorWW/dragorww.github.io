---
import { useTranslations } from "../../utils/i18n";
import { LANGUAGES } from "../../constants/languages";
import { Image } from "astro:assets";
import profileImage from "../../assets/profile.jpg";

export function getStaticPaths() {
  return [
    { params: { lang: LANGUAGES.RU } },
    { params: { lang: LANGUAGES.EN } },
  ];
}

const { lang } = Astro.params;
const t = (key: string) => useTranslations(Astro).t(key, lang || LANGUAGES.EN);

const experience = [
  {
    year: 2024,
    isCurrent: true,
    role: t("experience.role.cto"),
    company: t("experience.company.ultimate"),
    location: t("experience.location.moscow"),
    description: t("experience.ultimate.description"),
    achievements: [
      t("experience.ultimate.achievement1"),
      t("experience.ultimate.achievement2"),
      t("experience.ultimate.achievement3"),
      t("experience.ultimate.achievement4"),
    ],
    skills: [
      { name: "Kubernetes" },
      { name: "React" },
      { name: "TypeScript" },
      { name: "Python" },
      { name: "Django" },
    ],
  },
  {
    year: 2020,
    role: t("experience.role.cto"),
    company: t("experience.company.xyz"),
    location: t("experience.location.moscow"),
    description: t("experience.xyz.description"),
    achievements: [
      t("experience.xyz.achievement1"),
      t("experience.xyz.achievement2"),
      t("experience.xyz.achievement3"),
    ],
    skills: [
      { name: "Kubernetes" },
      { name: "Terraform" },
      { name: "React" },
      { name: "TypeScript" },
      { name: "CSS Modules" },
      { name: "GraphQL" },
      { name: "REST" },
      { name: "Python" },
      { name: "Django" },
    ],
  },
  {
    year: 2019,
    role: t("experience.role.principal"),
    company: t("experience.company.sber"),
    location: t("experience.location.spb"),
    description: t("experience.sber.description"),
    achievements: [
      t("experience.sber.achievement1"),
      t("experience.sber.achievement2"),
    ],
    skills: [
      { name: "React" },
      { name: "TypeScript" },
      { name: "Java" },
      { name: "Kotlin" },
    ],
  },
  {
    year: 2016,
    role: t("experience.role.principal"),
    company: t("experience.company.mag"),
    location: t("experience.location.tomsk"),
    description: t("experience.mag.description"),
    achievements: [
      t("experience.mag.achievement1"),
      t("experience.mag.achievement2"),
      t("experience.mag.achievement3"),
    ],
    skills: [
      { name: "React" },
      { name: "JavaScript" },
      { name: "Jenkins" },
      { name: "Jest" },
    ],
  },
  {
    year: 2013,
    role: t("experience.role.head"),
    company: t("experience.company.user"),
    location: t("experience.location.tomsk"),
    description: t("experience.user.description"),
    achievements: [
      t("experience.user.achievement1"),
      t("experience.user.achievement2"),
      t("experience.user.achievement3"),
    ],
    skills: [
      { name: "JavaScript" },
      { name: "React" },
      { name: "Redux" },
      { name: "Webpack" },
    ],
  },
];

const education = [
  {
    year: 2014,
    degree: t("education.degree"),
    institution: t("education.institution"),
    location: t("education.location"),
    description: t("education.description"),
  },
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t("me.name")} - CV</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="cv-download-btn">
      <a
        href={`/${lang}/CV_Andreev-Sergey_CTO-Head-of-enginering.pdf`}
        download
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        <span>{t("cv.download")}</span>
      </a>
    </div>

    <main class="cv-container">
      <div class="cv-top-section">
        <div class="cv-main-content">
          <header class="cv-header">
            <div class="cv-header-content">
              <div class="cv-header-main">
                <div class="cv-left-column">
                  <div class="cv-photo">
                    <Image src={profileImage} alt={t("me.name")} />
                  </div>
                  <div class="cv-contacts">
                    <a href="mailto:dragorww@gmail.com">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path
                          d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                        ></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                      </svg>
                      DragorWW@gmail.com
                    </a>
                    <a href="https://t.me/dragorww">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M21.5 2L2 9.5l7 4L18 6l-5 9.5 6.5 4L21.5 2z"
                        ></path>
                      </svg>
                      @DragorWW
                    </a>
                    <a href="https://dragorww.space">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="2" y1="12" x2="22" y2="12"></line>
                        <path
                          d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
                        ></path>
                      </svg>
                      DragorWW.space
                    </a>
                    <div class="cv-location">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                        ></path>
                        <circle cx="12" cy="10" r="3"></circle>
                      </svg>
                      {t("cv.location")}
                    </div>
                  </div>
                </div>
                <div class="cv-titles">
                  <h1 class="cv-name">{t("me.name")}</h1>
                  <div class="cv-roles">
                    <h2 class="cv-role-primary">
                      <strong>C</strong>hief<br />
                      <strong>T</strong>echnical<br />
                      <strong>O</strong>fficer
                    </h2>
                    <h2 class="cv-role-secondary">Head of Engineering</h2>
                  </div>
                </div>
              </div>
            </div>
          </header>

          <section class="cv-section cv-profile-section">
            <h2 class="cv-section-title">{t("cv.sections.profile")}</h2>
            <p class="cv-profile">
              {t("cv.profile.intro")}
            </p>
            <p class="cv-profile">
              {t("cv.profile.experience")}
            </p>
          </section>
        </div>

        <aside class="cv-sidebar">
          <h3 class="cv-sidebar-title">{t("cv.sections.achievements")}</h3>
          <div class="cv-sidebar-section">
            <ul class="cv-highlights">
              <li>{t("hero.stats.experience")}</li>
              <li>{t("hero.stats.delivery")}</li>
              <li>{t("hero.stats.solutions")}</li>
            </ul>
          </div>

          <h3 class="cv-sidebar-title">{t("cv.sections.key_skills")}</h3>
          <div class="cv-sidebar-section">
            <div class="cv-key-skills">
              <div class="cv-skill-list">
                <div class="cv-skill-category">
                  <h4 class="cv-skill-category-title">
                    {t("cv.skills.management")}
                  </h4>
                  <div class="cv-skill-items">
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.management.strategic_planning")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 95%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.management.team_management")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 90%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.management.process_optimization")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 85%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.management.budgeting")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 80%"></div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="cv-skill-category">
                  <h4 class="cv-skill-category-title">
                    {t("cv.skills.development")}
                  </h4>
                  <div class="cv-skill-items">
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.development.architecture")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 95%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.development.frontend")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 90%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.development.devops")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 85%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.development.integration")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 85%"></div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="cv-skill-category">
                  <h4 class="cv-skill-category-title">
                    {t("cv.skills.analytics")}
                  </h4>
                  <div class="cv-skill-items">
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.analytics.product")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 90%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.analytics.business")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 90%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.analytics.data_driven")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 85%"></div>
                      </div>
                    </div>
                    <div class="cv-skill-item">
                      <div class="cv-skill-name">
                        {t("cv.skills.analytics.metrics")}
                      </div>
                      <div class="cv-skill-bar">
                        <div class="cv-skill-progress" style="width: 85%"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </aside>
      </div>

      <div class="cv-full-width-content">
        <section class="cv-section">
          <h2 class="cv-section-title">{t("cv.sections.experience")}</h2>
          {
            experience.map((job) => (
              <div class="cv-job">
                <div class="cv-job-header">
                  <div class="cv-job-title">
                    <h3>{job.role}</h3>
                    <p class="cv-company">
                      {job.company}, {job.location}
                    </p>
                  </div>
                  <div class="cv-job-period">
                    {job.year}
                    {job.isCurrent ? ` - ${t("experience.present")}` : ""}
                  </div>
                </div>
                <p class="cv-job-description">{job.description}</p>
                <div class="cv-skills">
                  {job.skills?.map((skill) => (
                    <span class="cv-skill-tag">{skill.name}</span>
                  ))}
                </div>
                <ul class="cv-achievements">
                  {job.achievements.map((achievement) => (
                    <li>{achievement}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </section>

        <section class="cv-section">
          <h2 class="cv-section-title">{t("cv.sections.education")}</h2>
          {
            education.map((edu) => (
              <div class="cv-education">
                <div class="cv-education-header">
                  <div class="cv-education-title">
                    <h3>{edu.degree}</h3>
                    <p class="cv-institution">
                      {edu.institution}, {edu.location}
                    </p>
                  </div>
                  <div class="cv-education-year">{edu.year}</div>
                </div>
                <p class="cv-education-description">{edu.description}</p>
              </div>
            ))
          }
        </section>
      </div>
    </main>

    <style>
      /* Base */
      :root {
        --text-primary: #111111;
        --text-secondary: #444444;
        --border-color: rgba(212, 168, 83, 0.2);
        --card-bg: #ffffff;
        --card-bg-rgb: 255, 255, 255;
        --section-gap: 2.5rem;
        --heading-color: #000000;
        --accent-color: #b38c45;
        --accent-color-rgb: 179, 140, 69;
        --font-family: "Fira Code", monospace;
      }

      /* Применяем шрифт ко всем элементам */
      *,
      *::before,
      *::after {
        font-family: var(--font-family);
      }

      body {
        font-family: var(--font-family);
        line-height: 1.7;
        color: var(--text-primary);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        background: var(--card-bg);
        padding: 0;
        margin: 0 auto;
        width: 210mm; /* A4 width */
      }

      /* Container */
      .cv-container {
        display: flex;
        flex-direction: column;
        gap: 0;
        padding: 15mm;
        background: var(--card-bg);
      }

      .cv-top-section {
        display: grid;
        grid-template-columns: 1fr 200px;
        position: relative;
        break-after: page;
        page-break-after: always;
        overflow: hidden;
        padding: 2rem 0;
      }

      .cv-main-content {
        padding-right: 1.5rem;
        height: 100%;
        overflow: hidden;
      }

      .cv-full-width-content {
        width: 100%;
        padding-top: var(--section-gap);
      }

      .cv-sidebar {
        font-size: 0.85rem;
        height: 100%;
        border-left: 2px solid var(--accent-color);
      }

      .cv-sidebar-section {
        margin-bottom: 2rem;
        position: relative;
        padding: 0.75rem;
      }

      .cv-sidebar-section:last-child {
        margin-bottom: 0;
      }

      .cv-sidebar-title {
        color: var(--card-bg);
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.35rem 1.5rem;
        background: var(--accent-color);
        position: relative;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        margin-top: 0;
      }

      /* Обновляем отступы для контента */
      .cv-contacts,
      .cv-highlights,
      .cv-key-skills {
        padding: 0;
      }

      .cv-contacts {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .cv-contacts a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.2s ease;
        font-size: 0.85rem;
      }

      .cv-contacts svg {
        width: 14px;
        height: 14px;
        flex-shrink: 0;
        color: var(--accent-color);
        transition: transform 0.2s ease;
      }

      .cv-contacts a:hover {
        color: var(--accent-color);
      }

      .cv-contacts a:hover svg {
        transform: scale(1.2);
      }

      @media print {
        .cv-contacts svg {
          print-color-adjust: exact;
          -webkit-print-color-adjust: exact;
        }
      }

      .cv-highlights {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      .cv-highlights li {
        padding-left: 1rem;
        margin-bottom: 0.5rem;
        font-size: 0.7rem;
        color: var(--text-secondary);
      }

      .cv-highlights li::before {
        content: "•";
        color: var(--accent-color);
        position: absolute;
        left: 0;
      }

      /* Sections */
      .cv-section {
        margin-bottom: var(--section-gap);
        padding: 0.75rem 0;
      }

      .cv-section-title {
        color: var(--heading-color);
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        padding-left: 1rem;
      }

      .cv-section-title::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 1.2em;
        background: var(--accent-color);
        border-radius: 2px;
      }

      /* Profile */
      .cv-profile {
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
        line-height: 1.5;
      }

      .cv-key-skills {
        margin: 2rem 0;
      }

      .cv-subsection-title {
        font-size: 1.1rem;
        color: var(--accent-color);
        margin-bottom: 1rem;
        font-weight: 500;
      }

      .cv-skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .cv-skill-group {
        background: rgba(var(--accent-color-rgb), 0.03);
        padding: 1rem;
        border-radius: 6px;
        border: 1px solid var(--border-color);
      }

      .cv-skill-group-title {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--accent-color);
      }

      .cv-skill-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .cv-skill-item {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
        margin-bottom: 0.35rem;
      }

      .cv-skill-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
      }

      .cv-skill-name {
        font-size: 0.7rem;
        color: var(--text-secondary);
      }

      .cv-skill-level {
        color: var(--accent-color);
        font-weight: 500;
      }

      .cv-skill-bar {
        height: 3px;
        background: var(--border-color);
        border-radius: 1px;
        overflow: hidden;
      }

      .cv-skill-progress {
        height: 100%;
        background: var(--accent-color);
        border-radius: 1px;
      }

      @media print {
        .cv-skill-progress {
          print-color-adjust: exact;
          -webkit-print-color-adjust: exact;
        }
      }

      .cv-highlights {
        list-style: none;
        margin-left: 1rem;
      }

      .cv-highlights li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
      }

      .cv-highlights li::before {
        content: "▹";
        position: absolute;
        left: 0;
        color: var(--accent-color);
      }

      /* Experience */
      .cv-job {
        margin-bottom: 2rem;
        padding: 0.75rem;
        position: relative;
        break-inside: avoid-page;
        page-break-inside: avoid;
      }

      .cv-job:not(:last-child)::after {
        content: "";
        position: absolute;
        bottom: -1rem;
        left: 0;
        right: 0;
        height: 2px;
        background: var(--border-color);
        break-after: avoid-page;
        page-break-after: avoid;
      }

      .cv-job:first-child {
        margin-top: 0;
      }

      .cv-job-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
        gap: 1rem;
      }

      .cv-job-title {
        flex: 1;
      }

      .cv-job-title h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
        color: var(--heading-color);
      }

      .cv-company {
        font-size: 0.9rem;
        color: var(--accent-color);
        margin: 0;
        font-weight: 500;
      }

      .cv-job-period {
        font-size: 0.9rem;
        color: var(--text-secondary);
        white-space: nowrap;
        text-align: right;
        font-weight: 500;
      }

      .cv-job-description {
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
      }

      .cv-skills {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .cv-skill-tag {
        font-size: 0.8rem;
        padding: 0.15rem 0;
        color: var(--text-primary);
        position: relative;
