---
const { title } = Astro.props;
---

<h2 class="section-title"><span>{title}</span></h2>


<style>
.section-title {
    font-size: 2.5rem;
    margin-bottom: 4rem;
    text-align: center;
    position: relative;
    padding: 0 1rem;
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    justify-content: center;
}

.section-title::before,
.section-title::after {
    content: '';
    height: 1px;
    flex: 1;
    max-width: 150px;
    background: linear-gradient(
        to var(--direction, right),
        transparent,
        rgba(var(--accent-color-rgb), 0.5) 50%,
        transparent
    );
}

.section-title::before {
    --direction: right;
}

.section-title::after {
    --direction: left;
}

.section-title span {
    position: relative;
    display: inline-block;
    padding: 0 1rem;
    color: var(--section-title-color);
}

.section-title span::before,
.section-title span::after {
    content: 'â€¢';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--accent-color);
    font-size: 1.5rem;
    opacity: 0.7;
}

.section-title span::before {
    left: -0.5rem;
}

.section-title span::after {
    right: -0.5rem;
}

@media screen and (max-width: var(--tablet)) {
    .section-title {
        font-size: 2rem;
        margin-bottom: 3rem;
    }

    .section-title::before,
    .section-title::after {
        max-width: 80px;
    }
}

</style>
