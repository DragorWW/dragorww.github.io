---
interface Props {
  name: string;
  version: string;
}

const { name, version } = Astro.props;
---

<li class="skill-tag">
  {name} <span class="skill-tag__version">v{version}</span>
</li>

<style>
  .skill-tag {
    background: rgba(var(--bg-color-rgb), 0.1);
    border: 1px solid var(--border-color);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: rgba(var(--accent-color-rgb), 0.15);
    border-color: rgba(var(--accent-color-rgb), 0.3);
    transform: translateY(-1px);
  }

  .skill-tag__version {
    font-size: 0.75em;
    color: var(--text-tertiary);
    opacity: 0.8;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
    padding: 0;
  }
</style>
