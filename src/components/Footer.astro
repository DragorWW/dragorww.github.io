---
import SectionTitle from "./SectionTitle.astro";
import Container from "./Container.astro";
import { useTranslations } from "../utils/i18n";

const { t } = useTranslations(Astro);
---

<footer id="contacts" class="footer">
  <Container>
    <SectionTitle title={t("footer.section.title")} />
    <section class="contact">
      <div class="social-links">
        <a
          href={t("footer.githubUrl")}
          class="social-link"
          aria-label={t("footer.aria.github")}
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            ></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
        <a
          href="https://linkedin.com/in/dragorww"
          class="social-link"
          aria-label={t("footer.aria.linkedin")}
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M4 6a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6z"
            ></path>
            <path d="M8 11v5"></path>
            <path d="M8 8v.01"></path>
            <path d="M12 16v-5"></path>
            <path d="M16 16v-3a2 2 0 0 0-4 0"></path>
          </svg>
        </a>
        <a
          href="https://t.me/dragorww"
          class="social-link"
          aria-label={t("footer.aria.telegram")}
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M21 5L2 12.5l7 2.5"></path>
            <path d="M9 15l13-10-7 16-6-6"></path>
            <path d="M9 15l3.5 3.5"></path>
          </svg>
        </a>
        <a
          href="https://youtube.com/@dragorww"
          class="social-link"
          aria-label={t("footer.aria.youtube")}
        >
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M14 12l-3.5 2v-4l3.5 2z"></path>
            <path
              d="M2 12.707v-1.415c0-2.895 0-4.343.905-5.274.906-.932 2.332-.972 5.183-1.053C9.438 4.927 10.818 4.9 12 4.9c1.181 0 2.561.027 3.912.065 2.851.081 4.277.121 5.182 1.053.906.931.906 2.38.906 5.274v1.415c0 2.896 0 4.343-.905 5.275-.906.931-2.331.972-5.183 1.052-1.35.039-2.73.066-3.912.066-1.181 0-2.561-.027-3.912-.066-2.851-.08-4.277-.12-5.183-1.052C2 17.05 2 15.602 2 12.708z"
            ></path>
          </svg>
        </a>
      </div>
    </section>
    <div class="copyright">
      <span>2024 <span class="copyright-symbol">©</span> powered by AI</span>
      <span>•</span>
      <a href={t("footer.sourceUrl")} class="source-link">
        {t("footer.source")}
      </a>
    </div>
  </Container>
</footer>

<style>
  /* Contact Section */
  .contact {
    padding: 2rem 0;
    position: relative;
  }

  /* Создаем стилизованную линию, похожую на таймлайн */
  .social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    position: relative;
    padding: 1rem 0;
  }

  .social-links::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 2px;
    background: linear-gradient(
      to right,
      rgba(var(--accent-color-rgb), 0),
      rgba(var(--accent-color-rgb), 0.5),
      rgba(var(--accent-color-rgb), 0)
    );
  }

  .social-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(var(--card-bg-rgb), 0.2);
    border: 1px solid rgba(var(--accent-color-rgb), 0.1);
    border-radius: 12px;
    color: var(--accent-color);
    transition: all 0.3s ease;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    z-index: 1;
  }

  .social-link svg {
    width: 24px;
    height: 24px;
    stroke-width: 1.5px;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: rgba(var(--accent-color-rgb), 0.1);
    transform: translateY(-2px);
    border-color: rgba(var(--accent-color-rgb), 0.3);
  }

  .social-link:hover svg {
    transform: scale(1.1);
    stroke-width: 2px;
  }

  .social-link::before,
  .social-link::after {
    content: "";
    position: absolute;
    left: 50%;
    width: 2px;
    height: 1rem;
    background: linear-gradient(
      to bottom,
      rgba(var(--accent-color-rgb), 0),
      rgba(var(--accent-color-rgb), 0.3)
    );
    transition: all 0.3s ease;
  }

  .social-link::before {
    top: -1rem;
    transform: translateX(-50%);
  }

  .social-link::after {
    bottom: -1rem;
    transform: translateX(-50%);
  }

  .social-link:hover::before,
  .social-link:hover::after {
    height: 1.2rem;
    background: linear-gradient(
      to bottom,
      rgba(var(--accent-color-rgb), 0),
      rgba(var(--accent-color-rgb), 0.5)
    );
  }

  /* Footer */
  .footer {
    padding: 2rem 0;
    margin-top: 2rem;
    position: relative;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(var(--bg-color-rgb), 0.3)
    );
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .copyright {
    text-align: center;
    color: var(--text-tertiary);
    font-size: 0.75rem;
    opacity: 0.7;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .copyright::before {
    content: "";
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 40%;
    height: 1px;
    background: linear-gradient(
      to right,
      rgba(var(--accent-color-rgb), 0),
      rgba(var(--accent-color-rgb), 0.3),
      rgba(var(--accent-color-rgb), 0)
    );
  }

  .copyright .source-link {
    color: inherit;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .copyright .source-link:hover {
    color: var(--accent-color);
    opacity: 0.9;
  }

  .copyright .copyright-symbol {
    font-size: 1rem;
    line-height: 1;
    vertical-align: middle;
  }

  @media screen and (max-width: var(--tablet)) {
    .social-links::before {
      width: 90%;
    }

    .social-links {
      gap: 1.5rem;
    }

    .social-link {
      width: 40px;
      height: 40px;
    }
  }

  @media screen and (max-width: var(--mobile)) {
    .contact {
      padding: 1.5rem 0;
    }

    .social-links {
      gap: 1rem;
    }

    .social-link {
      width: 36px;
      height: 36px;
    }

    .social-link svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
