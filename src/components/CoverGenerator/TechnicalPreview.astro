---
import { Image } from "astro:assets";
import profileImage from "../../assets/profile.jpg";
import HeaderLogo from "../HeaderLogo.astro";
import MatrixBackground from "../MatrixBackground.astro";
import { URLS } from "../../constants/urls";

interface Props {
  defaultTitle: string;
  defaultDescription: string;
}

const { defaultTitle, defaultDescription } = Astro.props;
---

<div class="technical-preview" id="sourceContainer">
  <div class="cover-preview">
    <MatrixBackground static={true} startDelay={0} />
    <!-- Основной контент -->
    <div class="content">
      <!-- Основная часть с фото и информацией -->
      <div class="profile-info">
        <div class="photo-section">
          <div class="photo-wrapper">
            <div class="photo-border"></div>
            <Image src={profileImage} alt="Avatar" class="avatar" />
          </div>
          <div class="author-info">
            <div class="author-name">Sergey Andreev</div>
            <div class="author-role">Head of Engineering</div>
          </div>
        </div>
        <div class="info">
          <div class="title-section">
            <h2 class="cover-title" id="coverTitle">{defaultTitle}</h2>
            <p class="cover-description" id="coverDescription">
              {defaultDescription}
            </p>
          </div>
        </div>
      </div>

      <!-- Нижняя часть с логотипом и соц. сетями -->
      <div class="bottom-section">
        <div class="logo-section">
          <div class="logo-wrapper">
            <HeaderLogo />
          </div>
          <span class="domain-name">.space</span>
        </div>
        <div class="social-links">
          <span class="social-link">
            <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor">
              <path
                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
              ></path>
            </svg>
            @{URLS.twitterUrl.split("://")[1].split("/")[1]}
          </span>
          <span class="social-link">
            <svg
              class="social-icon social-icon--telegram"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M9.78 18.65l.28-4.23 7.68-6.92c.34-.31-.07-.46-.52-.19L7.74 13.3 3.64 12c-.88-.25-.89-.86.2-1.3l15.97-6.16c.73-.33 1.43.18 1.15 1.3l-2.72 12.81c-.19.91-.74 1.13-1.5.71L12.6 16.3l-1.99 1.93c-.23.23-.42.42-.83.42z"
              ></path>
            </svg>
            @{URLS.telegramChannelUrl.split("://")[1].split("/")[1]}
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Обновляем стили для технической верстки */
  .technical-preview {
    position: relative;
    width: 1200px;
    margin-left: auto;
    margin-right: auto;
    overflow: visible;
  }

  .technical-preview::before {
    content: "Техническая верстка";
    display: block;
    text-align: center;
    color: var(--accent-color);
    font-size: 0.8rem;
    margin-bottom: 1rem;
  }

  /* Обновляем стили для превью */
  .cover-preview {
    width: 1200px;
    height: 630px;
    border: 1px solid var(--accent-color);
    background: var(--card-bg);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    padding: 2.5rem;
    position: relative;
  }

  /* Обновляем структуру контента */
  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 2rem;
    z-index: 1;
    position: relative;
  }

  .profile-info {
    flex: 1;
    display: flex;
    gap: 3rem;
    align-items: flex-start;
    padding-top: 2rem;
  }

  .bottom-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    width: 100%;
    padding: 0 1rem;
  }

  .logo-section {
    display: flex;
    align-items: flex-end;
    gap: 0.25rem;
  }

  .domain-name {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--text-tertiary);
    opacity: 0.5;
    line-height: 1;
    padding-bottom: 0.5rem;
    margin-left: 0.7rem;
  }

  .logo-wrapper {
    transform: scale(1.2);
    transform-origin: bottom;
  }

  .author-info {
    text-align: center;
  }

  .author-name {
    font-size: 1.6rem;
    color: var(--text-primary);
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .author-role {
    font-size: 1.1rem;
    color: var(--accent-color);
  }

  .social-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    border-radius: 8px;
    font-size: 1.2rem;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  .social-icon {
    width: 20px;
    height: 20px;
    color: var(--accent-color);
  }

  .social-icon--telegram {
    width: 28px;
    height: 28px;
  }

  /* Стили для фото */
  .photo-wrapper {
    position: relative;
    width: 200px;
    height: 200px;
    border-radius: 12px;
    background: var(--card-bg);
    overflow: hidden;
    flex-shrink: 0;
  }

  .photo-border {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      transparent 20%,
      rgba(var(--accent-color-rgb), 1) 40%,
      rgba(var(--accent-color-rgb), 1) 60%,
      transparent 80%,
      transparent 100%
    );
    background-size: 200% 100%;
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  @keyframes shine {
    to {
      background-position: -200% 0;
    }
  }

  /* Стили для текста */
  .info {
    flex: 1;
    max-width: 100%;
  }

  .cover-title {
    font-size: 4rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
    word-wrap: break-word;
  }

  .cover-description {
    font-size: 1.8rem;
    line-height: 1.4;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    word-wrap: break-word;
    white-space: pre-wrap;
    overflow-wrap: break-word;
    max-height: 200px;
    overflow-y: auto;
  }

  /* Стилизуем скроллбар для описания */
  .cover-description::-webkit-scrollbar {
    width: 6px;
  }

  .cover-description::-webkit-scrollbar-track {
    background: transparent;
  }

  .cover-description::-webkit-scrollbar-thumb {
    background-color: var(--accent-color);
    border-radius: 3px;
    opacity: 0.5;
  }

  .cover-description::-webkit-scrollbar-thumb:hover {
    opacity: 0.7;
  }

  /* Стили для фото и информации об авторе */
  .photo-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  /* Медиа-запросы */
  @media (max-width: 1200px) {
    .technical-preview {
      width: 100%;
      overflow-x: auto;
      padding: 2rem 0;
    }

    .cover-preview {
      margin: 0 auto;
    }
  }
</style>
