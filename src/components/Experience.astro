---
import { useTranslations } from "../utils/i18n";
import SectionTitle from "./SectionTitle.astro";

const { t } = useTranslations(Astro);

const experience = {
  ru: [
    {
      period: "2021 — настоящее время",
      company: "Mindbox",
      position: "CTO / Head of Engineering",
      description:
        "Руководство разработкой, архитектурные решения, развитие команды",
      achievements: [
        "Масштабирование инфраструктуры",
        "Оптимизация процессов разработки",
        "Внедрение новых технологий",
      ],
    },
    // Добавьте другие записи опыта на русском
  ],
  en: [
    {
      period: "2021 — Present",
      company: "Mindbox",
      position: "CTO / Head of Engineering",
      description:
        "Development management, architectural solutions, team growth",
      achievements: [
        "Infrastructure scaling",
        "Development process optimization",
        "New technologies implementation",
      ],
    },
    // Добавьте другие записи опыта на английском
  ],
};
---

<section id="experience" class="experience">
  <SectionTitle>{t("experience.title")}</SectionTitle>
  <div class="experience__timeline">
    {
      experience[Astro.locals.lang].map((item) => (
        <div class="experience__item">
          <div class="experience__period">{item.period}</div>
          <div class="experience__content">
            <h3 class="experience__position">
              {item.position}
              <span class="experience__company">@ {item.company}</span>
            </h3>
            <p class="experience__description">{item.description}</p>
            <ul class="experience__achievements">
              {item.achievements.map((achievement) => (
                <li class="experience__achievement">{achievement}</li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .experience {
    padding: 4rem 0;
  }

  .experience__timeline {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 2rem;
  }

  .experience__item {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 2rem;
    padding: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .experience__item:hover {
    background: var(--card-bg);
  }

  .experience__period {
    color: var(--accent-color);
    font-size: 0.875rem;
  }

  .experience__position {
    font-size: 1.25rem;
    margin: 0 0 0.5rem;
    color: var(--text-primary);
  }

  .experience__company {
    color: var(--accent-color);
  }

  .experience__description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .experience__achievements {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .experience__achievement {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .experience__achievement::before {
    content: "▹";
    position: absolute;
    left: 0;
    color: var(--accent-color);
  }

  @media (max-width: 768px) {
    .experience__item {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .experience__period {
      font-size: 0.8rem;
    }

    .experience__position {
      font-size: 1.1rem;
    }
  }
</style>
