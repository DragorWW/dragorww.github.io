---
import { useTranslations } from "../utils/i18n";
const { lang } = useTranslations(Astro);
---

<div id="console-message" data-lang={lang}></div>

<script>
  import { _, style, console$ } from "@dragorww/console-style";
  const messages = {
    ru: {
      greeting: "👋 Привет, разработчик!",
      intro:
        "🚀 Раз уж ты заглянул в консоль, то наверняка тебе интересно что тут происходит.",
      openTo: "💼 Я всегда открыт к общению и новым проектам.",
      contacts: "📫 Связаться со мной:",
      ps: "🔍 P.S. Попробуй поискать другие пасхалки на сайте!",
    },
    en: {
      greeting: "👋 Hi, developer!",
      intro:
        "🚀 Since you're looking at the console, you're probably curious about what's going on here.",
      openTo: "💼 I'm always open to communication and new projects.",
      contacts: "📫 Contact me:",
      ps: "🔍 P.S. Try to find other easter eggs on the site!",
    },
  };

  const t =
    messages[
      (
        document.querySelector("#console-message") as HTMLDivElement
      ).getAttribute("data-lang") as keyof typeof messages
    ];

  const mono = style({ fontFamily: "monospace", fontSize: "12px" });
  const bold = style({ fontWeight: "bold" });
  const purple = style({ color: "#8B5CF6" });
  const orange = style({ color: "#F97316" });
  const gray = style({ color: "#94A3B8" });
  const accent = style({ color: "#E2C08D" });

  const highlight = _(style({ color: "#F97316" }), bold);
  const contact = _(style({ color: "#E2C08D" }), mono);

  console$`
    ${purple`██████╗ `}${orange`██████╗  █████╗  ██████╗  ██████╗ ██████╗ `}${purple`██╗    ██╗`}${orange`██╗    ██╗`}
    ${purple`██╔══██╗`}${orange`██╔══██╗██╔══██╗██╔════╝ ██╔═══██╗██╔══██╗`}${purple`██║    ██║`}${orange`██║    ██║`}
    ${purple`██║  ██║`}${orange`██████╔╝███████║██║  ███╗██║   ██║██████╔╝`}${purple`██║ █╗ ██║`}${orange`██║ █╗ ██║`}
    ${purple`██║  ██║`}${orange`██╔══██╗██╔══██║██║   ██║██║   ██║██████╔╝`}${purple`██║███╗██║`}${orange`██║███╗██║`}
    ${purple`██████╔╝`}${orange`██║  ██║██║  ██║╚██████╔╝╚██████╔╝██║  ██║`}${purple`╚███╔███╔╝`}${orange`╚███╔███╔╝`}
    ${purple`╚═════╝ `}${orange`╚═╝  ╚═╝╚═╝  ╚═╝ ╚═════╝  ╚═════╝ ╚═╝  ╚═╝`}${purple` ╚══╝╚══╝ `}${orange` ╚══╝╚══╝ `}

    ${gray`• Personal website of `}${highlight`Sergey Andreev`}${gray` • `}${accent`dragorww.space`}

    ${highlight`${t.greeting}`}
    
    ${gray`${t.intro}`}
    ${gray`${t.openTo}`}
    
    ${highlight`${t.contacts}`}
    ${contact`→ Telegram:`} @dragorww
    ${contact`→ Twitter: `} @dragorww
    ${contact`→ Email:   `} dragorww@gmail.com
    ${contact`→ GitHub:  `} github.com/dragorww
    
    ${gray`${t.ps}`}
    `;
</script>
