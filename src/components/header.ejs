<header class="header">
    <div class="container">
        <div class="header__content">
            <div class="logo">
                <%- include('./assets/logo-header.svg') %>
                <span class="logo-text">ragorWW</span>
            </div>
            <div class="header__right">
                <nav class="header__nav">
                    <a href="#home" class="header__nav-link header__nav-link--active">Главная</a>
                    <a href="#experience" class="header__nav-link">Мой опыт</a>
                    <a href="#contacts" class="header__nav-link">Контакты</a>
                </nav>
