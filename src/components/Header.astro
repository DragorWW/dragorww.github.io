---
import HeaderLogo from "./HeaderLogo.astro";
type Props = {
  youtubeUrl: string;
  twitterUrl: string;
  telegramChannelUrl: string;
};

const { youtubeUrl, twitterUrl, telegramChannelUrl } = Astro.props as Props;
---

