          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  (() => {
    function updateFavicon(theme) {
      // Находим все иконки
      const favicons = document.querySelectorAll('link[rel="icon"]');

      // Скрываем все иконки
      favicons.forEach((icon) => {
        icon.setAttribute("media", "none");
        icon.setAttribute("rel", "icon");
      });

      // Показываем нужную иконку
      const activeIcon = document.querySelector(
        `link[rel="icon"][data-theme="${theme}"]`,
      );
      if (activeIcon) {
        activeIcon.removeAttribute("media");
      }
    }

    function toggleTheme() {
      const currentTheme =
        document.documentElement.getAttribute("data-theme") || "dark";
      const newTheme = currentTheme === "light" ? "dark" : "light";

      document.documentElement.setAttribute("data-theme", newTheme);
      localStorage.setItem("theme", newTheme);

      // Обновляем favicon используя существующие теги
      updateFavicon(newTheme);
    }

    function initTheme() {
      const savedTheme = localStorage.getItem("theme") || "dark";
      document.documentElement.setAttribute("data-theme", savedTheme);
      // Инициализируем favicon с сохраненной темой
      updateFavicon(savedTheme);
    }

    document.addEventListener("DOMContentLoaded", initTheme);
    window.toggleTheme = toggleTheme;
  })();
</script>

<style>
  /* Header */
  .header {
    height: 64px;
    margin-bottom: 2rem;
    position: relative;
    backdrop-filter: blur(8px);
    background: linear-gradient(
      to bottom,
      rgba(var(--bg-color-rgb), 0.5) 0%,
      rgba(var(--bg-color-rgb), 0.3) 50%,
      rgba(var(--bg-color-rgb), 0) 100%
    );
  }

  .header__content {
    height: 64px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Стили для правой части */
  .header__right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__nav {
    display: none;
  }

  @media screen and (min-width: 768px) {
    .header__nav {
      display: flex;
      gap: 2rem;
    }
  }

  .header__nav-link {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.875rem;
    padding: 0.5rem 0;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
    opacity: 0.8;
  }

  .header__nav-link:hover,
  .header__nav-link--active {
    color: var(--accent-color);
    border-bottom-color: var(--accent-color);
    opacity: 1;
  }

  @media screen and (max-width: 480px) {
    .header {
      height: 56px;
    }

    .header__content {
      height: 56px;
    }

    .logo-text {
      font-size: 1.2em;
    }
  }

  /* Стили для переключателя темы */
  .header__theme-toggle {
    background: none;
    border: none;
    padding: 4px;
    cursor: pointer;
    width: 26px;
    height: 26px;
    margin-left: 16px;
    position: relative;
    color: var(--text-color);
    opacity: 0.7;
    border-radius: 4px;
    display: flex;
    align-self: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .header__theme-toggle:hover {
    opacity: 1;
    background: rgba(226, 192, 141, 0.1);
  }

  .header__theme-toggle-icon {
    position: relative;
    width: 18px;
    height: 18px;
    stroke-width: 1.5px;
    transition:
      transform 0.3s ease,
      opacity 0.2s ease;
  }

  .header__theme-toggle-icon--sun {
    position: absolute;
    opacity: 0;
    transform: scale(0.5);
  }

  .header__theme-toggle-icon--moon {
    position: absolute;
    opacity: 1;
    transform: scale(1);
  }

  /* Состояния иконок для светлой темы */
  [data-theme="light"] .header__theme-toggle-icon--sun {
    opacity: 1;
    transform: scale(1);
  }

  [data-theme="light"] .header__theme-toggle-icon--moon {
    opacity: 0;
    transform: scale(0.5);
  }

  .header__theme-toggle:active {
    transform: scale(0.95);
  }

  .header__theme-toggle:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(226, 192, 141, 0.2);
  }

  @media screen and (max-width: 768px) {
    .header__theme-toggle {
      margin-left: 12px;
      padding: 3px;
    }
  }

  /* Стили для мобильных устройств */
  @media screen and (max-width: 768px) {
    .header {
      height: 56px;
    }

    .header__content {
      height: 56px;
    }

    .logo-text {
      font-size: 1.2em;
    }
  }

  /* Добавляем стили для соцсетей в шапке */
  .header__social {
    display: none;
    gap: 1rem;
    align-items: center;
    margin-left: 2rem;
  }

  .header__social-link {
    color: var(--text-primary);
    opacity: 0.8;
    transition: all 0.2s;
  }

  .header__social-link:hover {
    color: var(--accent-color);
    opacity: 1;
  }

  .header__social-icon {
    width: 20px;
    height: 20px;
  }

  @media screen and (min-width: 1024px) {
    .header__social {
      display: flex;
    }
  }
</style>
