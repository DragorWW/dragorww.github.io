  <div class="container">
    <div class="header__content">
      <HeaderLogo />
      <div class="header__right">
        <nav class="header__nav">
          <a href="#home" class="header__nav-link header__nav-link--active"
            >
            Главная
            </a
          >
          <a href="#experience" class="header__nav-link">Мой опыт</a>
          <a href="#contacts" class="header__nav-link">Контакты</a>
        </nav>
        <div class="header__social">
          <a
            href={youtubeUrl}
            target="_blank"
            class="header__social-link"
            aria-label="YouTube"
          >
            <svg
